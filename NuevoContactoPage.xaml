<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPetShop.NuevoContactoPage"
             Title="NuevoContactoPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <TableView>
            <TableRoot>
                <TableSection Title="Datos de Contacto">
                    <EntryCell x:Name="Nombre" Placeholder="Nombre" />
                    <EntryCell x:Name="Apellido" Placeholder="Apellido"/>
                    <EntryCell x:Name="Cedula" Placeholder="Cedula" Keyboard="Numeric" />
                    <EntryCell x:Name="Direccion" Placeholder="Direccion" />
                    <EntryCell x:Name="Telefono" Placeholder="Telefono" Keyboard="Telephone" />
                    <EntryCell x:Name="Email" Placeholder="Email" />
                </TableSection>
            </TableRoot>
        </TableView>
        <Button 
            Text="Guardar" 
            Clicked="OnClickGuardarContacto"
            Margin="8"
        />
    </VerticalStackLayout>
</ContentPage>