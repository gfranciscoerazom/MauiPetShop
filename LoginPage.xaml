<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPetShop.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label
            Text="Login"
            x:Name="TitleLogin"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

        <TableView>
            <TableRoot>
                <TableSection Title="Datos Login">
                    <EntryCell x:Name="Nombre" Placeholder="Nombre" />
                    <EntryCell x:Name="Contrasena" Placeholder="Contrasena"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button 
            Text="Login" 
            Clicked="OnClickLogin"
            Margin="8"
        />
        <Button
            Text="Sing up"
            Clicked="OnClickSingUp"
            Margin="8"
        />
    </VerticalStackLayout>
</ContentPage>
